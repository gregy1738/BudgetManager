@using BudgetManager.Model
@model List<Transaction>
<html>
    <div class="col">
        <a asp-action="Create" class="btn btn-success">Add Transaction</a>
    </div>
    <table style="margin-top: 20px;" class="table table-condensed">
        <thead>
            <tr>
                <th>Transaction</th>
                <th>Date</th>
                <th>Amount</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                <td>
                    <a asp-action="Details" asp-route-id="@item.TransactionId">@item.TransactionName</a>
                </td>
                    <td>@item.TransactionDate.ToString("dd-MM-yyyy")</td>
                <td>@item.Amount€</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.TransactionId">[edit]</a>
                </td>
                </tr>
            }
        </tbody>
    </table>
</html>