@model BudgetManager.Model.Account

<div class="form-group">
    <label asp-for="AccountTypeId" class="control-label">Account Type</label>
    <select asp-for="AccountTypeId" class="form-control" asp-items="@(new SelectList(ViewBag.AccountTypes, "AccountTypeId", "AccountName"))"></select>
    <span asp-validation-for="AccountTypeId" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Balance" class="control-label"></label>
    <input asp-for="Balance" class="form-control" />
    <span asp-validation-for="Balance" class="text-danger"></span>
</div>
<div class="form-group">
    <input type="submit" value="Submit" class="btn btn-primary" />
</div>