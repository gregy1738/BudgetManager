@using BudgetManager.Model
@model List<Account>
<html>
<div class="col">
    <a asp-action="Create" class="btn btn-success">Add Bank/Investment Account</a>
</div>
<table style="margin-top: 20px;" class="table table-condensed">
    <thead>
        <tr>
            <th>Account Type</th>
            <th>Balance</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-route-id="@item.AccountId">@item.AccountType.AccountName</a>
                </td>
                <td>@item.Balance€</td>
                <td>
                    <a asp-action="Edit" asp-controller="Account" asp-route-id="@item.AccountId">[edit]</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="col">
    <a asp-action="Create" asp-controller="Report" class="btn btn-success">Generate Report</a>
</div>
</html>
